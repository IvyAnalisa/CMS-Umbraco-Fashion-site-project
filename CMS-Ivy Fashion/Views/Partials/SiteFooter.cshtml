@using Umbraco.Cms.Core.Models.PublishedContent

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@using Umbraco.Cms.Web.Common.PublishedModels;



@{
    var homePage = Model.Root();

    var socialIcons = homePage.Value<IEnumerable<IPublishedElement>>("socialIcons");
    var otherIcons = homePage.Value<IEnumerable<IPublishedElement>>("otherIcons");


}



<!-- Footer Start -->
<footer>
    <div class="container" >
        <div class="row align-items-start">
            
            @foreach (var otherIcon in otherIcons)
            {
                <div class="col" id="icons">
               
                    <i class="bi bi-@otherIcon.Value("icon")">@otherIcon.Value("iconText")</i>
                
                </div>

            }
          
        </div>
     </div>
    <div class="footer-flex-container">     

        <div class="footer-widget">
            <h2>Contact us</h2>
            <div class="contact-info">
                <ul>
                 <li><a href="mailto:@homePage.Value("contactEmail")">@homePage.Value("contactEmail")</a></li>
                 <li><a href="tel: @homePage.Value("contactPhoneNUmber")">@homePage.Value("contactPhoneNumber")</a></li>
                </ul>
            </div>
        </div>

        <div class="footer-widget">
            <h2>Follow Us</h2>
            <div class="social">
                @foreach (var socialIcon in socialIcons)
                {
                    
                        <a href="@socialIcon.Value("link")">
                            <i class="bi bi-@socialIcon.Value("icon") fa-2x"></i>
                        </a>
                    
                }

            </div>
        </div>

        <div class="footer-widget">
            <h2>Company Info</h2>
            <ul>
                <li>About Us</li>
                <li>Privacy Policy</li>
                <li>Terms & Condition</li>
            </ul>
        </div>


        <div class="footer-widget">
            <h2>Purchase Info</h2>
            <ul>
                <li><a href="#">Payment Policy</a></li>
                <li><a href="#">Shipping Policy</a></li>
                <li><a href="#">Return Policy</a></li>
            </ul>
        </div>
       
    </div>
    <p style="text-align:center">Copyright Ivy Fashion</p>
</footer>